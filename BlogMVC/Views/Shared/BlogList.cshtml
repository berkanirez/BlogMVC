@model IEnumerable<BlogMVC.Models.BlogModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Blog not found</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">
                @blog.Title
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.PostDate
            </p>
            <hr />
            <img class="img-fluid" src="http://placehold.it/900x300" alt="" />
            <hr />
            <p>
                @blog.Description
            </p>
            @Html.ActionLink("More detail..", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}